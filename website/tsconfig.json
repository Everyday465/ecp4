{
  "compilerOptions": {
    "target": "es6",                              
    "module": "esnext",                           
    "lib": ["dom", "dom.iterable", "esnext"],    
    "jsx": "react-jsx",                          
    "strict": true,                              
    "moduleResolution": "node",                  
    "resolveJsonModule": true,                   
    "isolatedModules": true,                     
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true                               
  },
  "include": ["src"],                            
  "exclude": ["node_modules"]                   
}